<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    tools:context=".Updatafood"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/foodimag"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="-60dp"
            android:scaleType="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="20sp">

            <TextView
                android:id="@+id/namefoodup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:paddingLeft="10dp"
                android:text="namefoodup"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/pink"

                android:fitsSystemWindows="true"
                android:paddingTop="20dp"


                >

                <TextView
                    android:id="@+id/largeup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10sp"
                    android:text="largeup"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/remov1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginRight="230dp"
                    android:paddingTop="10sp"
                    android:src="@drawable/remove"
                    app:srcCompat="@drawable/remove" />

                <TextView
                    android:id="@+id/cont1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="180dp"
                    android:paddingTop="10sp"
                    android:text=" NL"

                    android:textSize="20sp"
                    android:textStyle="bold"

                    />


                <ImageView
                    android:id="@+id/add1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="140dp"
                    android:paddingTop="10sp"
                    android:src="@drawable/add"
                    app:srcCompat="@drawable/add" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"


                >

                <TextView
                    android:id="@+id/mediumup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10sp"
                    android:text="meduam"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/remov2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginRight="230dp"
                    android:paddingTop="10sp"
                    android:src="@drawable/remove"
                    app:srcCompat="@drawable/remove" />


                <TextView
                    android:id="@+id/cont2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="180dp"
                    android:paddingTop="10sp"
                    android:text=" NL"

                    android:textSize="20sp"
                    android:textStyle="bold"

                    />


                <ImageView
                    android:id="@+id/add2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="140dp"
                    android:paddingTop="10sp"
                    android:src="@drawable/add"
                    app:srcCompat="@drawable/add" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/pink"
                android:elevation="10dp"
                app:cardElevation="10dp"

                >

                <TextView
                    android:id="@+id/smalleup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10sp"
                    android:text="smallup"
                    android:textSize="20dp"
                    android:textStyle="italic" />


                <ImageView
                    android:id="@+id/remov3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginRight="230dp"
                    android:paddingTop="10sp"
                    android:src="@drawable/remove"
                    app:srcCompat="@drawable/remove" />


                <TextView
                    android:id="@+id/cont3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="180dp"
                    android:paddingTop="10sp"
                    android:text=" 0"

                    android:textSize="20sp"
                    android:textStyle="bold"

                    />


                <ImageView
                    android:id="@+id/add3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="140dp"
                    android:paddingTop="10sp"
                    android:src="@drawable/add"
                    app:srcCompat="@drawable/add" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:elevation="10dp"
            android:textSize="15sp"


            android:text="add to cart "
            android:textStyle="bold"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"


            android:textColor="@color/white"
            app:cornerRadius="30dp" />


        <TextView
            android:id="@+id/totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"

            android:textColor="@color/pink"

            android:textSize="20sp"


            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



